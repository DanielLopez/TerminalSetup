sh ~/TerminalSetup/pre-sync

echo "Syncing ....."
mkdir -p ~/TerminalSetup/.config/nvim
mkdir -p ~/TerminalSetup/.tmux

rsync -rL --exclude '.git' --exclude '.github' --exclude '.gitignore' ~/.config/nvim ~/TerminalSetup/.config/
rsync -rL --exclude '.git' --exclude '.github' --exclude '.gitignore' ~/.tmux/ ~/TerminalSetup/.tmux/
rsync -L  --exclude '.git' --exclude '.github' --exclude '.gitignore' ~/.tmux.conf ~/TerminalSetup/
rsync -L  --exclude '.git' --exclude '.github' --exclude '.gitignore' ~/.bashrc ~/TerminalSetup/
echo "Sync Completed"
